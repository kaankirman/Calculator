<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/dark_grey"
        android:padding="10dp"
        android:textSize="48sp"
        android:text=""
        android:gravity="end|bottom"
        android:textColor="@color/light_grey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark_grey"
        >
        <Button
            android:id="@+id/btSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_7"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_8"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_9"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/divide"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onOperator"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark_grey"
        >
        <Button
            android:id="@+id/btFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_6"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btMulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/multiply"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onOperator"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark_grey"
        >
        <Button
            android:id="@+id/btOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/minus"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onOperator"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark_grey"
        >
        <Button
            android:id="@+id/btDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Dot"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDecimalPoint"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_0"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clr"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onClear"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/plus"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onOperator"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark_grey"
        >
        <Button
            android:id="@+id/btEq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Equals"
            android:backgroundTint="@color/mid_grey"
            android:layout_margin="2dp"
            android:onClick="onEqual"
            android:textColor="@color/white"
            />
    </LinearLayout>


</LinearLayout>